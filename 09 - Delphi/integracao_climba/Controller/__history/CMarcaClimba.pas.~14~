unit CMarcaClimba;

interface

uses
  MMarcaClimba, MConexaoMarcaClimba;

  type
  TCMarcaClimba = class
  private

  public
    MarcaClimba: TMarcaClimba;
    ConexaoMarcaClimba: TConexaoMarcaClimba;
    procedure CadastrarMarca(id, nome: string);
    constructor create();
    destructor destroy();

  end;

implementation


{ TCMarcaClimba }

procedure TCMarcaClimba.CadastrarMarca(id, nome: string);
begin
  MarcaClimba.id := id;
  MarcaClimba.name := nome;
end;

constructor TCMarcaClimba.create;
begin
  MarcaClimba := TMarcaClimba.Create();
  ConexaoMarcaClimba := ConexaoMarcaClimba.Create();
end;

destructor TCMarcaClimba.destroy;
begin
  MarcaClimba.Free;
end;

end.
