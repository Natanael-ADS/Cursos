unit MCodeStatus;

interface

uses
  UControllerMessages;
type
  TCodeStatus = class
    private
    public
      class procedure MensagemStatus(codigo:integer);
  end;

implementation

{ TCodeStatus }

class procedure TCodeStatus.MensagemStatus(codigo:integer);
begin
  case codigo of
    201: TControllerMessages.CallSuccessMessage('Indica que o processamento foi realizado corretamente e o retorno será conforme expectativa',false);
    400: TControllerMessages.CallErrorMessage('Requisição mal formada, 1 ou mais parâmetros estão ausentes',false);
    401: TControllerMessages.CallErrorMessage('Requisição requer autenticação',false);
    403: TControllerMessages.CallErrorMessage('Requisição negada',false);
    404: TControllerMessages.CallErrorMessage('Recurso não encontrado',false);
    405: TControllerMessages.CallErrorMessage('Método não permitido',false);
    406: TControllerMessages.CallErrorMessage('Parametros não aceitados',false);
    409: TControllerMessages.CallErrorMessage('Um atributo já está cadastrado com o mesmo código',false);
    415: TControllerMessages.CallErrorMessage('Corpo da requisição inválida',false);
    429: TControllerMessages.CallErrorMessage('Limite de requisições atingido',false);
  end;
end;

end.
