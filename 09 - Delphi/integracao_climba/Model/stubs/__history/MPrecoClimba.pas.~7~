unit MPrecoClimba;

interface

type
  TMPrecoClimba = class
    private
      Fname: string;
      Fid: string;
      procedure Setid(const Value: string);
      procedure Setname(const Value: string);
    public
      property id: string read Fid write Setid;
      property name: string read Fname write Setname;
      constructor Create();
      destructor Destroy(); override;
      class function JsonStringParaObjeto(AjsonString: string): TMPrecoClimba;
      function ToJsonString: string;
  end;

implementation

{ TMPrecoClimba }
uses
  REST.JSON, System.JSON;

constructor TMPrecoClimba.Create;
begin

end;

destructor TMPrecoClimba.Destroy;
begin

  inherited;
end;

procedure TMPrecoClimba.Setid(const Value: string);
begin
  Fid := Value;
end;

procedure TMPrecoClimba.Setname(const Value: string);
begin
  Fname := Value;
end;

class function TMPrecoClimba.JsonStringParaObjeto(AjsonString: string): TMPrecoClimba;
  var
  JSonValue : TJSonValue;
begin
  JsonValue := TJSonObject.ParseJSONValue(AjsonString);
  Result := TJson.JsonToObject<TMPrecoClimba>(AjsonString);
end;

function TMPrecoClimba.ToJsonString: string;
begin
  result := TJson.ObjectToJsonString(Self);
end;

end.
